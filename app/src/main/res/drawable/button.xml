<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="#A4A4A4" android:endColor="#F2F2F2" android:startColor="#F2F2F2" />
            <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
            <stroke android:width="2dip" android:color="#FFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:color="@color/white" android:state_enabled="true" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="90" android:endColor="@color/colorButtonCompleteState" android:startColor="@color/colorButtonCompleteState" />
            <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
            <stroke android:width="2dip" android:color="@color/colorStroke" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="#DF7401" android:endColor="#F7D358" android:startColor="#F7D358" />
            <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
            <stroke android:width="2dip" android:color="@color/colorStroke" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:color="@color/black" android:state_enabled="true">
        <shape android:color="@color/black" android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />
            <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
            <stroke android:width="2dip" android:color="@color/colorStroke" />
            <corners android:radius="8dp" />
        </shape>

    </item>
</selector>